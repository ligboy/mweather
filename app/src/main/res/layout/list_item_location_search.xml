<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/placesLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:visibility="visible"
        android:paddingLeft="@dimen/material_layout_keylines_horizontal_mobile_margin"
        android:paddingStart="@dimen/material_layout_keylines_horizontal_mobile_margin"
        android:paddingRight="@dimen/material_layout_keylines_horizontal_mobile_margin"
        android:paddingEnd="@dimen/material_layout_keylines_horizontal_mobile_margin">

    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:id="@+id/savedPlacesLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/material_layout_keylines_horizontal_mobile_margin"
        android:paddingStart="@dimen/material_layout_keylines_horizontal_mobile_margin"
        android:paddingRight="@dimen/material_layout_keylines_horizontal_mobile_margin"
        android:paddingEnd="@dimen/material_layout_keylines_horizontal_mobile_margin">
        <android.support.v7.widget.AppCompatImageView
            android:id="@android:id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_place_color_control_normal_24dp"/>

    </LinearLayout>
</FrameLayout>